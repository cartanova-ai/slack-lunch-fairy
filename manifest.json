{
  "display_information": {
    "name": "점심 요정",
    "description": "매일 점심 메뉴를 알려주는 요정",
    "background_color": "#FF6B6B"
  },
  "features": {
    "bot_user": {
      "display_name": "Lunch Fairy",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/lunch",
        "description": "점심 요정 명령어",
        "usage_hint": "[subscribe HH:mm | unsubscribe | list]",
        "should_escape": false
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "chat:write.public",
        "commands",
        "reactions:read",
        "reactions:write"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "reaction_added",
        "reaction_removed"
      ]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
